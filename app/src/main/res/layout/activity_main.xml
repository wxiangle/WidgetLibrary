<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.aaron.mylibrary.expendview.ExpandText
            android:id="@+id/scroll_expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:textSize="18sp"
            app:allow_anim="true"
            app:anim_during="400"
            app:close_end_drawable="@mipmap/test_icon_spand_down"
            app:close_end_text="展开全文"
            app:close_end_text_color="#FF0000"
            app:default_open="false"
            app:ellipse_text="..."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:limit_line="2"
            app:open_end_drawable="@mipmap/test_icon_spand_up"
            app:open_end_text="收起"
            app:open_end_text_color="#FF0000" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>